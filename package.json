{
  "name": "mantis-ai",
  "version": "1.5.0",
  "type": "module",
  "description": "Create autonomous AI agents with a two-layer architecture: Next.js Event Handler + Docker Agent.",
  "bin": {
    "mantis-ai": "./bin/cli.js"
  },
  "main": "api/index.js",
  "exports": {
    "./api": "./api/index.js",
    "./config": "./config/index.js",
    "./instrumentation": "./config/instrumentation.js",
    "./auth": "./lib/auth/index.js",
    "./auth/actions": "./lib/auth/actions.js",
    "./events/sse": "./lib/events/sse.js",
    "./chat/api": "./lib/chat/api.js",
    "./db": "./lib/db/index.js",
    "./chat": "./lib/chat/components/index.js",
    "./chat/actions": "./lib/chat/actions.js",
    "./middleware": "./lib/auth/middleware.js",
    "./skills": "./lib/skills/index.js",
    "./channels": "./lib/channels/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "bin/",
    "lib/",
    "api/",
    "config/",
    "setup/",
    "templates/",
    "drizzle/"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build",
    "local": "bash bin/local.sh",
    "postinstall": "if [ -f bin/postinstall.js ]; then node bin/postinstall.js; fi",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ai",
    "agent",
    "autonomous",
    "telegram",
    "bot",
    "claude",
    "nextjs"
  ],
  "author": "Maitrik Patel",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/react": "^2.0.0",
    "@clack/prompts": "^0.10.0",
    "@grammyjs/parse-mode": "^2.2.0",
    "@langchain/anthropic": "^1.3.17",
    "@langchain/core": "^1.1.24",
    "@langchain/google-genai": "^2.1.18",
    "@langchain/langgraph": "^1.1.4",
    "@langchain/langgraph-checkpoint-sqlite": "^1.0.1",
    "@langchain/openai": "^1.2.7",
    "ai": "^5.0.0",
    "bcrypt-ts": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.0",
    "grammy": "^1.39.3",
    "lucide-react": "^0.400.0",
    "node-cron": "^3.0.3",
    "open": "^10.0.0",
    "puppeteer": "^24.37.5",
    "streamdown": "^2.2.0",
    "tailwind-merge": "^3.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.0",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "next": ">=15.5.12",
    "next-auth": "^5.0.0-beta.30",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "next-auth": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^3.0.0",
    "drizzle-kit": "^0.31.9",
    "esbuild": "^0.27.3",
    "next-themes": "^0.4.6",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
